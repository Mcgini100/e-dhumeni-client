# Production environment configuration

# API Configuration
VITE_API_BASE_URL=https://api.edhumeni.com/api

# Authentication
VITE_JWT_STORAGE_KEY=edhumeni_token

# Map Configuration
VITE_MAPBOX_TOKEN=your_mapbox_token_here 
VITE_DEFAULT_MAP_CENTER_LAT=-18.8555
VITE_DEFAULT_MAP_CENTER_LNG=29.7468
VITE_DEFAULT_MAP_ZOOM=6

# Feature Flags
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_ANALYTICS=true

# App Configuration
VITE_MAX_UPLOAD_SIZE=10485760 # 10MB in bytes
VITE_DEFAULT_PAGINATION_LIMIT=100

# Log Configuration
VITE_LOG_LEVEL=error

# Cache settings
VITE_CACHE_DURATION=86400000 # 24 hours in milliseconds

# Performance settings
VITE_ENABLE_COMPRESSION=true
VITE_ENABLE_CODE_SPLITTING=true